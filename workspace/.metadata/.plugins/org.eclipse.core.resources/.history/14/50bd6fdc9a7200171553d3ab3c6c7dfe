package com.ouya.zr;

public class SuperTest {
	
	public static void main(String[] args) {
		
		Person1 p = new Person1("name",12); 
		System.out.println(p.info());;
		
	}
	
	
}

class Person1{
	private String name;
	private int age;
	
	
	//构造器
	public Person1(String name ,int age){
		this.setName(name);
		this.setAge(age);
		
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}
	
	public String info(){//String返回   原因：只是将输出的结果拼接起来而已
		return this.getName()+this.getAge();
	}
	
}



class St extends Person1{

	private String school;
	
	//重写父类的构造方法
	public St(String name, int age,String school) {
		//调用父类的参数
		super(name, age);//super：使用：放在构造器首行，调父类相同形参的构造方法
		this.setSchool(school);
	}

	public String getSchool() {
		return school;
	}

	public void setSchool(String school) {
		this.school = school;
	}

	
	public String info(){
		//return this.getName() + this.getAge() + this.getSchool();
		return super.info() + this.getSchool();//获得父类的固定方法+自身方法
	}
	
}

class wo{
	private String work;
}